<h1>This is the product edit page</h1>

<% if @product.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @product.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @product do |f| %>
  <div class="form-group">
    <%= f.text_field :name, required: true, class: "form-control", placeholder: "name" %>
  </div>

  <div class="form-group">
    <%= f.text_field :cost, required: true, class: "form-control", placeholder: "cost" %>
  </div>

  <div class="form-group">
    <%= f.text_field :country_origin, required: true, class: "form-control", placeholder: "country of origin" %>
  </div>

  <div class="form-group">
    <%= f.button :submit, class: 'btn btn-success' %>
  </div>
<% end %>

<p><%= link_to "Return to product", product_path %></p>
