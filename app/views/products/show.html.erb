<h1>This is the individual product page</h1>
<h3>Product: <%= @product.name %></h3>
<p>Cost: <%= @product.cost %></p>
<p>Origin: <%= @product.country_origin %></p>

<button class="btn btn-default"><%= link_to "Edit", edit_product_path(@product) %></button>
<button class="btn btn-default"> <%= link_to "Delete", product_path(@product),
                          :data => {:confirm => "Please confirm product deletion",
                          :method => "delete"} %></button>

<p><%= link_to "Return to homepage", products_path %></p>
