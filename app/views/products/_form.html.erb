<%= render "errors" %>

<%= form_for @product do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :cost %>
    <%= f.text_field :cost, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :country_origin %>
    <%= f.text_field :country_origin, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.button :submit, class: 'btn btn-success' %>
  </div>
<% end %>
